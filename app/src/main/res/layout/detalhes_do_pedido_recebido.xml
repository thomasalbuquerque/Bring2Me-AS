<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.echo.bring2me.activity.DetalhesPedidoRecebidoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesNomePedido"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesValorPedido"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesLinkPedido"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesEmailClientePedido"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesEmpacotadoPedido"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesCorreioOuPessoalPedido"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesEnderecoPedido"
                android:layout_marginTop="5dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtStatus"
                android:singleLine="false"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal" android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Button
                        android:text="Aceitar pedido"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:id="@+id/btnAceitaPedido"
                        android:visibility="invisible"/>

                    <Button
                        android:text="Recusar pedido"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:id="@+id/btnRecusaPedido"
                        android:visibility="invisible"/>

                </LinearLayout>
                <Button
                    android:text="Comprei o produto"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:id="@+id/btn_compraProduto"
                    android:visibility="invisible"/>
                <Button
                    android:text="Enviei o produto"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:id="@+id/btn_envioProduto"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>