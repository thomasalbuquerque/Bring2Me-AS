<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.echo.bring2me.activity.DetalhesPedidosFeitosActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesNomePedidoFeito"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesValorPedidoFeito"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesLinkPedidoFeito"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesEmpacotadoPedidoFeito"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesCorreioOuPessoalPedidoFeito"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhesEnderecoPedidoFeito"
                android:layout_marginTop="5dp"
                android:textColor="@color/input_login"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/avaliadoaceitoPedidoFeito"
                android:layout_marginTop="5dp"
                android:textColor="@color/input_login"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>